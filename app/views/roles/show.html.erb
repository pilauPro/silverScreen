<p id="notice"><%= notice %></p>

<div class="jumbotron">
	<h1><%= @role.name %></h1>
</div>

<div class="indent">
	<h3>
	  Movie:
	  <%= @role.movie.title %>
	</h3>

	<h3>
	  Actor:
	  <%= @role.actor.fname + " " + @role.actor.lname %>
	</h3>
	<%= link_to 'Edit', edit_role_path(@role) %> |
	<%= link_to 'Destroy', @role, method: :delete, data: { confirm: 'Are you sure?' } %> |
	<%= link_to 'Back', roles_path %>
</div>
