<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1>Actors</h1>
</div>

<table class="table table-bordered indent">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.order("lname ASC").each do |actor| %>
      <tr>
        <td><%= actor.last_name_first %></td>
        <td><%= link_to 'Show', actor %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="indent">
  <%= link_to 'New Actor', new_actor_path %>
</div>
