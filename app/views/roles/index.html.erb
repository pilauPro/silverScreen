<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h1>Roles</h1>
</div>

<table class="table table-bordered indent">
  <thead>
    <tr>
      <th>Role</th>
      <th>Actor</th>
      <th>Movie</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= link_to role.name, role %></td>
        <td><%= link_to role.actor.fname + " " + role.actor.lname, role.actor %></td>
        <td><%= link_to role.movie.title, role.movie %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="indent">
  <%= link_to 'New Role', new_role_path %>
</div>
