    <%= f.label :tagline %><br>
    <%= f.text_field :tagline %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>

  <% if @movie.image.exists? %>
      <%= image_tag @movie.image.url %><br />
  <% end %>
  <div class="field">  
    <%= f.label :image, "Attach a New Image" %><br />
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
